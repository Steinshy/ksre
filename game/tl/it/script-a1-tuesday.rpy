translate it a1_tuesday_risk_vs_reward_5359f8bb:

    # hi "You're so competitive, Shizune."
    hi "Sei così competitiva, Shizune."

# game/script-a1-tuesday.rpy:956
translate it a1_tuesday_risk_vs_reward_1bc15d00:

    # "She seems to take this as a compliment."
    "Sembra prenderlo come un complimento."

# game/script-a1-tuesday.rpy:958
translate it a1_tuesday_risk_vs_reward_1fbbe1a1:

    # hi "I would expect the Student Council president to be a little more magnanimous."
    hi "Mi aspettavo che la presidentessa del consiglio studentesco fosse un po' più magnanima."

# game/script-a1-tuesday.rpy:963
