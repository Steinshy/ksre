translate zh_hans a2_rin_target_audience_34d1d59d:

    # hi "Hmm?"
    hi "嗯？"

# game/script-a2-rin.rpy:2805
translate zh_hans a2_rin_target_audience_bdc861ba:

    # emm "Oh, nothing."
    emm "噢，没什么。"

